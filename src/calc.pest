pi    = @{ ^"PI" | ^"Î " }
const = _{ pi }

neg      =  { "-" }
number   = @{ ASCII_DIGIT+ ~ ("." ~ ASCII_DIGIT*)? }
quantity = _{ neg? ~ (number | const | "(" ~ expr ~ ")") }

add =  { "+" }
sub =  { "-" }
mul =  { "*" }
div =  { "/" }
ops = _{ add | sub | mul | div }

expr =  { quantity ~ (ops ~ quantity)* }
line = _{ SOI ~ expr ~ EOI }

WHITESPACE = _{ " " }
